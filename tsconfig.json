{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@libs/*": ["./libs/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/home/page.jsx",
    "app/api/update-info/route.js",
    "app/components/ProtectComponent.jsx",
    "client/components/LoginForm.jsx",
    "client/components/Home.jsx",
    "client/components/user/SettingsComponent.jsx",
    "app/home/product/[productId]/page.jsx",
    "app/login/page.jsx",
    "app/user/settings/page.jsx",
    "app/components/*"
, "client/components/SuccessPopup.jsx", "app/about-us/page.jsx", "app/api/auth/register/route.js"  ],
  "exclude": ["node_modules"]
}
